{
  "name": "nightwatch-autorun",
  "version": "2.2.0",
  "description": "Automatically installs Selenium (if necessary) and runs End-to-End tests with Nightwatch.",
  "main": "runner.js",
  "bin": {
    "nightwatch-autorun": "index.js",
    "nw-autorun": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "cd test && REPORT_DIR=../reports LOG_DIR=../reports node ../index.js && cd .. || cd ..",
    "lint": "eslint --cache .",
    "precommit": "npm run lint -s",
    "prepush": "npm run test -s",
    "postversion": "git push --follow-tags"
  },
  "engines": {
    "node": "5"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nkbt/nightwatch-autorun.git"
  },
  "keywords": [
    "nightwatch",
    "selenium",
    "runner",
    "autorun",
    "end-to-end",
    "automation"
  ],
  "author": "Nik Butenko <nik@butenko.me> (http://butenko.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nkbt/nightwatch-autorun/issues"
  },
  "homepage": "https://github.com/nkbt/nightwatch-autorun",
  "dependencies": {
    "mkdirp": "0.5.1",
    "nightwatch": "0.8.18",
    "npm-which": "2.0.0",
    "selenium-standalone": "4.8.0",
    "webpack": "1.12.10",
    "webpack-dev-server": "1.14.1"
  },
  "devDependencies": {
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.2.0",
    "html-webpack-plugin": "2.14.0",
    "husky": "0.11.4",
    "webpack": "1.12.14",
    "webpack-dev-server": "1.14.1"
  }
}
